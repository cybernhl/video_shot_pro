<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
         android:layout_height="match_parent" >

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/main_dialog_support_topText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/main_dialog_support_topText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/main_dialog_support_byAlipay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_dialog_support_byAlipay_text"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/main_dialog_support_topText"
            android:layout_marginLeft="4dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/main_dialog_support_byAlipay_img"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="250dp"
            app:srcCompat="@drawable/alipay"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/main_dialog_support_byAlipay_text"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/main_dialog_support_byWeixin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_dialog_support_byWeixin_text"
            android:layout_marginTop="180dp"
            app:layout_constraintTop_toBottomOf="@+id/main_dialog_support_byAlipay_img"
            android:layout_marginLeft="-10dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/main_dialog_support_byWeixin_img"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="250dp"
            app:srcCompat="@drawable/weixin"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/main_dialog_support_byWeixin_text"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/main_dialog_support_bottomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_dialog_support_bottomText"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/main_dialog_support_byWeixin_img"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>